<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.pln.decki.sijali.PekerjaanBaru">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
                <com.pln.decki.sijali.customfont.KOActivista
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Pekerjaan Baru"
                    android:textSize="32sp"
                    android:textColor="@color/black"/>
                <com.pln.decki.sijali.customfont.KOActivista
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Judul pekerjaan"/>
                <com.pln.decki.sijali.customfont.HelloBasic
                    android:id="@+id/judulpekerjaan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/yellow"
                    android:inputType="textNoSuggestions"
                    android:padding="@dimen/activity_horizontal_margin"
                    android:textSize="18sp"/>
                <com.pln.decki.sijali.customfont.KOActivista
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Lokasi pekerjaan"/>
                <com.pln.decki.sijali.customfont.HelloBasic
                    android:id="@+id/lokasipekerjaan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textNoSuggestions"
                    android:padding="@dimen/activity_horizontal_margin"
                    android:textSize="18sp"
                    android:background="@color/yellow"/>
                <com.pln.decki.sijali.customfont.KOActivista
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Tanggal pekerjaan"/>
                <com.pln.decki.sijali.customfont.HelloBasic
                    android:focusable="false"
                    android:id="@+id/haripekerjaan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textNoSuggestions"
                    android:clickable="true"
                    android:padding="@dimen/activity_horizontal_margin"
                    android:background="@color/yellow"
                    android:textSize="18sp"/>
                <com.pln.decki.sijali.customfont.KOActivista
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Detail pekerjaan"/>
                <com.pln.decki.sijali.customfont.HelloBasic
                    android:id="@+id/detailpekerjaan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textNoSuggestions"
                    android:textSize="18sp"
                    android:padding="@dimen/activity_horizontal_margin"
                    android:background="@color/yellow"/>
                <com.pln.decki.sijali.customfont.KOActivista
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Penanggung jawab manuver"/>
                <Spinner
                    android:id="@+id/penanggungjawab_manuver"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dialog"
                    android:padding="@dimen/activity_horizontal_margin"
                    android:layout_margin="0dp"></Spinner>
                <com.pln.decki.sijali.customfont.KOActivista
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Penanggungjawab K3"/>
                <Spinner
                    android:id="@+id/penanggungjawab_k3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/activity_horizontal_margin"
                    android:layout_margin="0dp"></Spinner>
                <com.pln.decki.sijali.customfont.KOActivista
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Penanggungjawab pekerjaan"/>
                <Spinner
                    android:id="@+id/penanggungjawab_pekerjaan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/activity_horizontal_margin"
                    android:layout_margin="0dp"></Spinner>
                <com.pln.decki.sijali.customfont.KOActivista
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Anggota"/>
                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/anggota"
                    android:scrollbars="vertical">

                </android.support.v7.widget.RecyclerView>
                <Spinner
                    android:id="@+id/anggota_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/activity_horizontal_margin"
                    android:layout_margin="0dp"></Spinner>
                <com.pln.decki.sijali.customfont.HelloBasicButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/activity_horizontal_margin"
                    android:id="@+id/tambah"
                    android:background="@drawable/tengah_biru"
                    android:text="Tambah anggota"/>
                <com.pln.decki.sijali.customfont.HelloBasicButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:id="@+id/insert"
                    android:background="@drawable/tengah_hijau"
                    android:text="Tambah pekerjaan"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"/>
                <com.pln.decki.sijali.customfont.HelloBasicButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/activity_horizontal_margin"
                    android:background="@drawable/tengah_hijau"
                    android:id="@+id/update"
                    android:text="Perbarui Pekerjaan"
                    />
            </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</FrameLayout>
